%p
  %strong Body:
  = @question.body
= link_to 'Edit', edit_question_path(@question)
|
= link_to 'Back', questions_path

.list-group
  %a.list-group-item.active
    = 'Answers:'
  - @question.answers.each do |answer|
    %a.list-group-item
      = answer.body

.row
  .col-md-6
    = form_with(model: [@question, @answer], local: true) do |form|
      - if @answer.errors.any?
        #error_explanation
          %h4
            = pluralize(@answer.errors.count, 'error')
            prohibited this @answer from being saved:
          %ul
            - @answer.errors.full_messages.each do |message|
              %li= message
      .field
        = form.label :body
        = form.text_area :body, id: :answer_body, class: 'form-control'

      .actions
        = form.submit 'Add answer', class: 'btn btn-primary mt-15'