!!!
%html
  %head
    %title Qpro
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .container
      - if notice
        %div.alert.alert-success
          %p.notice= notice
      - if alert
        %div.alert.alert-danger
          %p.alert= alert
      = yield